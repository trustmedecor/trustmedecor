<%- include("partials/header") -%>
    <section class="service-container container-fluid pt-5 justify-content-center">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-5 col-sm-10" data-aos="fade-right" data-aos-duration="1500">
                <div class="card">
                    <div id="carouselControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="/<%= img1 %>" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/<%= img2 %>" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/<%= img3 %>" alt="Third slide">
                            </div>
                        </div>

                        <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>

            </div>
            <div class="col-lg-6 col-md-7 col-sm-12 col-12 service-description" data-aos="fade-left" data-aos-duration="1500">
                <h4>
                    <%= name %>
                </h4>
                <h5>
                    â‚¹
                    <%= price %>
                </h5>

                <h5>Inclusion</h5>
                <table>
                    <tr class="py-1">
                        <td class="green-check"><i class="tick fas fa-check px-1"></i></td>
                        <td>
                            <%= line1 %>
                        </td>
                    </tr>
                    <tr class="py-1">
                        <td class="green-check"><i class="tick fas fa-check px-1"></i></td>
                        <td>
                            <%= line2 %>
                        </td>
                    </tr>
                    <tr class="py-1">
                        <td class="green-check"><i class="tick fas fa-check px-1"></i></td>
                        <td>
                            <%= line3 %>
                        </td>
                    </tr>
                    <tr class="py-1">
                        <td class="green-check"><i class="tick fas fa-check px-1"></i></td>
                        <td>
                            <%= line4 %>
                        </td>
                    </tr>
                    <tr class="py-1">
                        <td class="green-check"><i class="tick fas fa-check px-1"></i></td>
                        <td>
                            <%= line5 %>
                        </td>
                    </tr>
                </table>
                <button type="button" href="#" class="btn btn-outline-dark btn-md btn-block mt-3 hero-btn" data-toggle="modal" data-target="#mainModal" data-whatever="@mdo"> BOOK NOW</button>
            </div>
        </div>
    </section>

    <!--STATIC TEXT-SECTION-START-->
    <section class="container-fluid pt-5">
        <div class="row static-text justify-content-center">
            <div class="col-lg-4" data-aos="slide-up" data-aos-duration="1500">
                <div class="card">
                    <div class="card-header">
                        <h5 style="background:none;">Cancellation Policy</h5>
                    </div>
                    <li class="list-group-item policyandneed">More than 24 hours before experience: Cancellation with 90% Refund</li>
                    <li class="list-group-item policyandneed">6 hours to 24 hours before an experience: Cancellation with 50% Refund</li>
                    <li class="list-group-item policyandneed">Less than 6 hours before experience: No Refund on Cancellation</li>
                    <li class="list-group-item policyandneed">No Cancellation is possible for experiences booked for 13th and 14th February as these are Valentine's Special Packages.</li>
                </div>
            </div>
            <div class="col-lg-6 need2know" data-aos="slide-up" data-aos-duration="1500">
                <div class="card">
                    <div class="card-header">
                        <h5 style="background:none;">Need to Know</h5>
                    </div>
                    <li class="list-group-item policyandneed">Please arrange a stool or ladder for the Decorator to reach the ceiling</li>
                    <li class="list-group-item policyandneed">We do not use helium balloons for home use.</li>
                    <li class="list-group-item policyandneed"> We use air balloons.</li>
                    <li class="list-group-item policyandneed">We Use cello tape to attach Balloons to the ceiling.</li>
                    <li class="list-group-item policyandneed">After selecting your experience, go to the next page and mention your address and pincode.</li>
                    <li class="list-group-item policyandneed">Our Decorators Follow all the covid guidelines.</li>
                </div>
            </div>
        </div>
    </section>
    <!--STATIC TEXT-SECTION-END-->

    <!-- DETAILS-FORM-MODAL-START -->

    <div class="modal fade" id="mainModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Personal Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
                </div>
                <div class="modal-body">
                    <form action="/service" method="POST">
                        <div class="form-row">
                            <div class="form-group inline-block col-lg-6 col-md-6 col-sm-6 col-xs-6 ">
                                <label for="inputFname">Full Name</label>
                                <input type="text" class="form-control" id="inputFname" name="fname" placeholder="" required>
                            </div>
                            <div class="form-group inline-block  col-lg-6 col-md-6 col-sm-6 col-xs-6 ">
                                <label for="inputNumber">Number</label>
                                <input type="text" class="form-control" id="inputNumber" name="number" placeholder="" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-lg-6 ">
                                <label for="inputDate">Date</label>
                                <input type="date" class="form-control" id="inputDate" name="date" placeholder="" required>
                            </div>
                            <div class="form-group  col-lg-6 ">
                                <label for="inputTime">Time</label>
                                <select class="form-control" id="inputTime" name="time">
                                  <option>10:00 AM to 2:00 PM</option>
                                  <option>2:00 PM to 4:00 PM</option>
                                  <option>4:00 PM to 6:00 PM</option>
                                  <option>6:00 PM to 8:00 PM</option>
                                  <option>8:00 PM to 10:00 PM</option>
                                  <option>10:00 PM to 12:00 AM</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-lg-6 ">
                                <label for="inputAddress1">Address</label>
                                <input type="text" class="form-control" id="inputAddress1" name="addressone" placeholder="" required>
                            </div>
                            <div class="form-group col-lg-6 ">
                                <label for="inputAddress2">City</label>
                                <input type="text" class="form-control" id="inputAddress2" name="adddresstwo" placeholder="" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-lg-6 ">
                                <label for="inputPincode">Pincode</label>
                                <input type="text" class="form-control" id="inputPincode" name="pincode" placeholder="" required>
                            </div>
                            <div class="form-group col-lg-6 ">
                                <label for="inputOccasion">Occasion</label>
                                <input type="text" class="form-control" id="inputOccasion" name="occasion" placeholder="" required>
                            </div>
                            <div class="form-group  col-lg-6 " style="display: none;">
                                <label for="inputButton">Time</label>
                                <select class="form-control" id="inputButton" name="button">
                                  <option><%= paybtn %></option>
                                </select>
                            </div>
                        </div>
                        <button href="/order/<%= id %>" type="submit" class="hero-btn btn btn-outline-dark">Submit</button>
                        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- DETAILS-FORM-MODAL-END -->











    <%- include("partials/footer") %>